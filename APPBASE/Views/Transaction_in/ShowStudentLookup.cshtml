@using APPBASE.Svcutil

<!-- Modal -->
<div class="modal fade" id="DialogLookup" tabindex="-1" role="dialog" aria-labelledby="DialogLookupTitle" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-aqua">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="DialogLookupTitle">Daftar Siswa</h4>
      </div>
      <div class="modal-body">
        <div id="DialogLookupContent">
            <div class="row">
                <div class="col-xs-12">
                            @if (ViewBag.STUDENT == null) { 
                                <table class="table table-hover">
                                    <tr>
                                        <td style="width:95%;text-align:center;">@{Html.RenderPartial("_PartialEmpty");}</td>
                                    </tr>
                                </table>
                            }

                            @if (ViewBag.STUDENT != null)
                            {

                            <div class="input-group">
                                <input type="text" name="searchValue" id="searchValue" class="form-control input-sm pull-right FieldEnableAlways" placeholder="Filter Data "/>
                                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                            </div>

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                            @foreach (var item in ViewBag.STUDENT)
                            {
                                <tr class="LOOKUPROW">
                                    <td class="SEARCHABLE_ROWS" style="width:50%;">
                                        <div class="row">
                                            <div class="col-xs-2">
                                            </div> <!-- <div class="col-xs-2"> -->
                                            <div class="col-xs-10">
                                                <div>NIS     : @item.NIS</div>
                                                <div>Nama    : @item.NAME</div>
                                                <div>Kelas : @item.CLASSROOM_SHORTDESC</div>
                                            </div> <!-- <div class="col-xs-10"> -->
                                        </div> <!-- <div class="row"> -->


                                        <input type="hidden" class="ID" value="@item.ID" />
                                        <input type="hidden" class="CODE" value="@item.NIS" />
                                        <input type="hidden" class="DESC" value="@item.NAME" />
                                        <input type="hidden" class="OTHER" value="@item.CLASSROOM_SHORTDESC" />
                                    </td>
                                </tr>
                            }
                                </tbody>
                            </table>
                            }
                </div><!-- /.col-xs-12 -->
            </div> <!-- <div class="row"> -->
        </div> <!-- <div id="DialogLookupContent"> -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-flat btn-warning" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>                        

