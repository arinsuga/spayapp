@using APPBASE.Helpers

<!DOCTYPE html>
<html class="bg-black" lang="en">
    <head>
        <meta charset="UTF-8">
        <title>@ViewBag.Appname | @ViewBag.Title</title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

        <!-- csslayoutlogin -->
        <link href="@Url.Content("~/")Content/AdminLTE/css/bootstrap.css" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/")Content/AdminLTE/css/font-awesome.css" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/")Content/AdminLTE/css/AdminLTE.css" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/")Content/SiteLogin.css" rel="stylesheet" type="text/css" />

