@using APPBASE.Helpers
@using APPBASE.Svcutil
@using APPBASE.Svcbiz
@using APPBASE.Models

@{
    AnnouncementDS oDS = new AnnouncementDS();
    var oAnnouncement = oDS.getDatalist();
}

@if (oAnnouncement != null)
{

    <li>


                        <!-- Tasks: style can be found in dropdown.less -->
                        <li class="dropdown tasks-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bullhorn"></i>
                                <span class="label label-success">@oAnnouncement.Count</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header"></li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        @foreach (var item in oAnnouncement)
                                        {
                                            <li><!-- Announcement item -->
                                                <a href="#">
                                                    <h3>
                                                        <span style="font-weight">@item.TITLE</span>
                                                    </h3>
                                                    <p>@item.SHORT_DESC</p>
                                                </a>
                                            </li><!-- end Announcement item -->
                                        }
                                    </ul>
                                </li>
                                <li class="footer">
                                </li>
                            </ul>
                        </li>

        
    </li> <!-- Anouncement Notification -->

}