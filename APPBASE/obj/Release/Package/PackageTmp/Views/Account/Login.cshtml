@model APPBASE.Models.UserloginVM

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="loginForm">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.USR_ID)
                @Html.TextBoxFor(m => m.USR_ID)
                @Html.ValidationMessageFor(m => m.USR_ID)
            </li>
            <li>
                @Html.LabelFor(m => m.USR_PSWD)
                @Html.PasswordFor(m => m.USR_PSWD)
                @Html.ValidationMessageFor(m => m.USR_PSWD)
            </li>
        </ol>
        <input type="submit" value="Log in" />
    </fieldset>
}
</section>

<section class="social" id="socialLoginForm">
    <h2></h2>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
